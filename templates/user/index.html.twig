{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des utilisateurs</h1>
        <a href="{{ path('user_new') }}" class="btn btn-success mb-3">Ajouter un utilisateur</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Rôles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.roles|json_encode }}</td>
                        <td>
                            {% if is_granted('user_edit', user) %}
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            {% endif %}

                            {% if is_granted('user_delete', user) %}
                                <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun utilisateur trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
